<style>
  .midle-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    text-align: center;
  }

  .list-card {
    list-style: none;
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
    align-content: baseline;
    gap: 10px;
  }

  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 200px;
    width: 100%;
    background-color: #ffffff2c;
    color: #000;
    transition: 0.3s;
    padding: 10px;
    border-radius: 50px;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0px 0px 5px 3px rgba(255, 255, 255, 0.5);
  }

  a {
    text-decoration: none;
    text-transform: capitalize;
    transition: 0.3s;
    color: #fff;
    width: max-content;
  }

  a::before {
    content: "";
    position: absolute;
    bottom: 9px;
    height: 3px;
    width: 0;
    background-color: #fff;
    border-radius: 25px;
    transition: width 0.3s ease;
  }
  a:hover::before {
    width: 52%;
  }

  h1 {
    font-size: 3rem;
  }

  p {
    font-weight: 700;
    text-transform: uppercase;
  }
</style>
